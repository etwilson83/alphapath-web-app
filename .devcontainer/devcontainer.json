{
	"name": "Azure Developer CLI + Go + Vue.js + PostgreSQL",
	"image": "mcr.microsoft.com/devcontainers/python:3.10-bullseye",
	
	"features": {
		// Azure and Infrastructure tooling (ESSENTIAL for azd templates)
		"ghcr.io/devcontainers/features/azure-cli:1": {},
		"ghcr.io/devcontainers/features/terraform:1": {
			"version": "latest"
		},
		"ghcr.io/azure/azure-dev/azd:latest": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		
		// Application development tooling
		"ghcr.io/devcontainers/features/go:1": {
			"version": "1.23"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "18"
		},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	
	"customizations": {
		"vscode": {
			"extensions": [
				// Azure and Infrastructure (CRITICAL for azd templates)
				"ms-azuretools.azure-dev",
				"hashicorp.terraform", 
				"GitHub.vscode-github-actions",
				"ms-azuretools.vscode-azurefunctions",
				"ms-azuretools.vscode-docker",
				
				// Go development
				"golang.go",
				"ms-vscode.vscode-go",
				
				// Vue.js/Frontend development
				"vue.volar",
				"vue.vscode-typescript-vue-plugin",
				"bradlc.vscode-tailwindcss",
				"ms-vscode.vscode-typescript-next",
				
				// Database
				"ms-ossdata.vscode-postgresql",
				"ckolkman.vscode-postgres",
				
				// General development
				"ms-vscode.vscode-json",
				"redhat.vscode-yaml",
				"ms-vscode.remote-containers",
				"eamodio.gitlens",
				"esbenp.prettier-vscode"
			],
			
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.lintTool": "golangci-lint",
				"go.formatTool": "goimports",
				"go.testFlags": ["-v"],
				"typescript.preferences.quoteStyle": "single",
				"editor.tabSize": 2,
				"editor.insertSpaces": true,
				"files.autoSave": "onFocusChange",
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	},
	
	"forwardPorts": [3000, 8080, 5432],
	"portsAttributes": {
		"3000": {
			"label": "Frontend (Vue.js)",
			"onAutoForward": "notify"
		},
		"8080": {
			"label": "Backend (Go API)", 
			"onAutoForward": "notify"
		},
		"5432": {
			"label": "PostgreSQL Database",
			"onAutoForward": "silent"
		}
	},
	
	"postCreateCommand": "cd backend && go mod download",
	"postStartCommand": "echo 'ðŸš€ Dev container ready! Run: ./scripts/dev.sh for local dev or azd up for Azure deployment'",
	
	"remoteUser": "vscode",
	"hostRequirements": {
		"memory": "8gb"
	}
}
